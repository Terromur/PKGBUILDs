# Maintainer: GreyXor <greyxor@protonmail.com>
# Maintainer: Antonin DÃ©cimo <antonin dot decimo at gmail dot com>
pkgname=wlroots
pkgver=0.18.2
pkgrel=1
license=(MIT)
pkgdesc='Modular Wayland compositor library'
url=https://gitlab.freedesktop.org/wlroots/wlroots
arch=(x86_64)
provides=('libwlroots-0.18.so' "wlroots=${pkgver}")
conflicts=('libwlroots-0.18.so')
options=(!debug)
depends=(
	glslang
	libinput
	libdisplay-info
	libliftoff
	libxcb
	opengl-driver
	xcb-util-errors
	xcb-util-renderutil
	xcb-util-wm

        'libpixman-1.so'
        'libseat.so'
        'libudev.so'
        'libvulkan.so'
        'libwayland-client.so'
        'libwayland-server.so'
        'libxkbcommon.so'

	xorg-xwayland
	lcms2)
makedepends=(
	git
	meson
	vulkan-headers
	wayland-protocols
	xorgproto)
source=("${pkgname}::git+${url}#tag=${pkgver}")
sha512sums=('a368715ed4ff36074d7e690336a38272b7fadd51fb29a2a1ec02f28a5f07fa773c1bb273016c11e813e5b012dc91d6d9f284d436fbbc58a9662b6e6523a4f377')

prepare () {
  cd "${pkgname}"
}

build () {
  arch-meson \
		--buildtype=release \
		-Dwerror=false \
		-Dexamples=false \
		-Ddebug=false \
		-Doptimization=3 \
		-Dstrip=true \
		-Db_lto=true \
		-Dc_std=gnu23 \
		-Dbuild.c_args=gnu23 \
		-Dcpp_std=gnu++23 \
		-Dbuild.cpp_std=gnu++23 \
		-Dpython.bytecompile=2 \
		-Derrorlogs=false \
		-Dstdsplit=false \
		-Dxwayland=disabled \
		"${pkgname}" build
  meson compile -C build
}

package () {
  DESTDIR="${pkgdir}" meson install -C build
  install -Dm644 "${pkgname}/"LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
